{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "importHelpers": true,
    // output .d.ts declaration files for consumers
    //"declaration": true,
    //"declarationMap": true,
    // output .js.map sourcemap files for consumers
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  }
}